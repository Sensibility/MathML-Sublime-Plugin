        - match: '(?:[^\s<>/''"]|/(?!>))+'
          scope: meta.attribute-with-value.minsize.mathml string.unquoted.mathml
        - match: ''
          pop: true

  #A bunch of attributes for tags that can determine line breaks (so far only `mo` and `mspace`)
  linebreaking-tags:
